@model IEnumerable<MVC_CORE_CRUD_EF_CF_Demo.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Designation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
            
                <a asp-action="Create" class="btn btn-outline-success"><i class="far fa-plus-square"></i> Employee</a>

                </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Designation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EmployeeId"><i class="fa fa-marker fa-lg"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.EmployeeId" class="text-danger ml-1"
                       onclick="return confirm('Are you sure to delete this record?')">
                        <i class="fa fa-trash-alt fa-lg"></i>
                    </a>

                </td>
            </tr>

            @*<a asp-action="Edit" asp-route-id="@item.EmployeeId">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.EmployeeId">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.EmployeeId">Delete</a>*@

        }
    </tbody>
</table>
